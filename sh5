#!/bin/bash
#SA SE SCRIE UN SCRIPT SHELL CAREE CITESTE DE LA TASTATURA UN NUME DE FISIER
#NUMELE INCLUDE CALEA ABSOLUTA :/ETC/PASSWD,PANA SE INTRODUCE CUVANTUL NUL
#SCRIPTUL TREBUIE SA DETERMINE SI SA AFISEZE PERMISIUNILE ACELUI FISIER,DACA ACESTA 
#EXISTA SI ARE O LUNGIME NENULA
#SAU MESAJUL "FISIERUL NU EXISTA SAU ESTE GOL" IN CAZ CONTRAR
while true;do
	
	read -p "DATI NUMELE FISIERULUI : " FIS
	if [ $FIS = "NUL" ]
	then
		echo "------------"
		exit 1
	fi	
	if [ -s "$FIS" ]
	then
		PERMISIUNI=$(ls -l $FIS | awk '{ print $1}')
		echo "ARE PERMISIUNEA $PERMISIUNI"
	else
		echo "NU EXISTA SAU ESTE GOL"
	fi
done
