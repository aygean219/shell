#!/bin/bash
#SA SE SCRIE UN SCRIPT CARE PRIMESTE CA ARGUMENTE ORICATE
#NUME DE FISIERE ,SCRIPTUL VA CITI DE TASTATURA
#DOUA CUVINTE CUV1 SI CUV2 SI VA INLOCUI PRIMA APARITIE A CUV1
#DIN TOATE LINIILE DIN FIECARE FISIER DAT LA LINIA DE COMANDA
read -p "CUVANTUL1: " CUV1
read -p "CUVANTUL2: " CUV2
for p in $*
do
	sed -i 's/'$CUV1'/'$CUV2'/' $p  
	echo "FISIERUL $p ARE URMATOAREA FORMA ACUM :"
	cat $p
done

