#!/bin/bash
#7.SA SE SCRIE UN SCRIPT BASH CARE ARE CA ARGUMENTE TRIPLETE FORMATE DINTR-UN NUME DE FISIER
#UN CUVANT SI UN NUMAR K.PENTRU FIEACRE ASTFEL DE TRIPLET SE FOR AFISA TOATE LINIILE FISIERULUI 
#RESPECTIV CARE CONTIN CUVANTUL RESPECTIV DE EXACT K ORI
while [ ! $# -eq 0 ]
do
	FISIER=$1
	CUVANT=$2
	NR=$3
	shift 3
	awk -v cuv=$CUVANT -v n=$NR '{ok=0;for (i=1;i<=NF;i++) if( $i == cuv) ok++; if( ok == n )  print $0 }' $FISIER
done
